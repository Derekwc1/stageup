<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container">
  <div class="col-lg-12" style="border: 1px solid grey; padding: 20px 10px 10px 10px; width: 80%; min-width: 360px">
    <div class="form-group" style="padding-bottom: 6px">
      <%= f.label :email, class: "col-lg-12 control-label" %>
      <div class="col-lg-12" style="padding-bottom: 6px">
      <%= f.email_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group" style="padding-bottom: 6px">
        <%= f.label :password, class: "col-lg-12 control-label" %>
        <div class="col-lg-12" style="padding-bottom: 6px">
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-12">
            <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-lg-12">
            <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>


<% end %>
