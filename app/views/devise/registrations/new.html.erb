
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="container" style="margin-left: 0">
  <h2>Register</h2>
<p class="text-muted">Create an account to post a startup or browse available listings</p>
  <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4 signup" style=" background-color: #EFEFF2">
    
    <div class="form-group">
      <%= f.label :first_name, class: "control-label" %>
      <div>
      <%= f.text_field :first_name, class: "form-control", placeholder: "Enter First Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :last_name, class: "control-label" %>
      <div>
      <%= f.text_field :last_name, class: "form-control", placeholder: "Enter Last Name" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "control-label" %>
      <div>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email"  %>
      </div>
    </div>

    <div class="form-group">
        <%= f.label :password, class: "control-label" %>
        <div>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter Password - Min Length 8 Characters"  %>
        </div>
    </div>

    <div class="form-group">
        <div>
            <%= f.submit "Sign up", class: "btn btn-primary" %>
        </div>
    </div>

    <div class="form-group">
        <div>
            <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>


<% end %>
